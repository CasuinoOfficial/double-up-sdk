{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "jsx": "react-jsx",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "lib", "**/*spec.ts", "src/run/**"]
}
